alias lsusb="cyme"
alias parub="paru $1 --bottomup"
alias fpath="readlink -f $1"

alias rm="trash"

alias la="ls -la"
unix-time() {
    TZ="Europe/Ljubljana" date -d "@$1" +"%d.%m.%Y %H:%M:%S"
}

date-format() {
    echo "Command: date '+%d.%m.%Y %H:%M:%S'"
    date '+%d.%m.%Y %H:%M:%S'
}

trash() {
    mv -n "$@" ~/.trash
}
rmf() {
    command rm -rf -- "$@";
}
